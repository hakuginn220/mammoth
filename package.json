{
  "name": "mammoth",
  "version": "0.0.1",
  "description": "test client for mastodon",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "test": "electron-packager .",
    "release": "npm run release:darwin && npm run release:win32",
