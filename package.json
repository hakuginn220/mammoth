{
  "private": true,
  "name": "mammoth-develop",
  "version": "0.1.0",
  "description": "test client for mastodon",
  "engines": {
    "node": ">=7.0.0",
    "npm": ">=4.0.0"
  },
  "scripts": {
    "start": "electron app",
    "test": "jest",
    "flow": "flow",
    "lint": "standard --fix",
    "build": "webpack",
    "watch": "webpack -w",
    "release": "npm run webpack && npm run release:darwin && npm run release:win32",
    "release:darwin": "electron-packager app --platform=darwin --arch=x64 --out=dist --asar=true --icon=app/images/icon.icns",
    "release:win32": "electron-packager app --platform=win32 --arch=ia32 --out=dist --asar=true --icon=app/images/icon.ico",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "flux": "^3.1.2",
    "immutable": "^3.8.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "styled-components": "^2.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "electron": "^1.6.10",
    "electron-packager": "^8.7.0",
    "eslint-plugin-flowtype": "^2.33.0",
    "flow-bin": "^0.47.0",
    "husky": "^0.13.4",
    "jest": "^20.0.4",
    "lint-staged": "^3.5.1",
    "react-test-renderer": "^15.5.4",
    "standard": "^10.0.2",
    "webpack": "^2.6.1"
  },
  "standard": {
    "parser": "babel-eslint",
    "envs": [
      "jest"
    ],
    "plugins": [
      "flowtype"
    ],
    "ignore": [
      "flow-typed"
    ]
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "git add"
    ]
  }
}
