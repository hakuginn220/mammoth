{
  "private": true,
  "name": "mammoth",
  "version": "0.1.0",
  "description": "test client for mastodon",
  "scripts": {
    "start": "electron app",
    "test": "jest && standard --fix",
    "flow": "flow check && flow stop",
    "build": "webpack",
    "watch": "webpack -w",
    "release": "npm run webpack && npm run release:darwin && npm run release:win32",
    "release:darwin": "electron-packager app --platform=darwin --arch=x64 --out=dist --asar=true --icon=app/images/icon.icns",
    "release:win32": "electron-packager app --platform=win32 --arch=ia32 --out=dist --asar=true --icon=app/images/icon.ico"
  },
  "engines": {
    "node": ">=7.0.0",
    "npm": ">=4.0.0"
  },
  "dependencies": {
    "flux": "^3.1.2",
    "immutable": "^3.8.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "styled-components": "^1.4.5"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "electron": "^1.6.6",
    "electron-packager": "^8.6.0",
    "flow-bin": "^0.45.0",
    "jest": "^19.0.2",
    "standard": "^10.0.2",
    "webpack": "^2.4.1"
  },
  "standard": {
    "ignore": [
      "flow-typed"
    ]
  }
}
