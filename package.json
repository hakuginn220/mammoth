{
  "private": true,
  "name": "mammoth-develop",
  "version": "0.1.0",
  "description": "test client for mastodon",
  "scripts": {
    "precommit": "lint-staged",
    "start": "electron app",
    "test": "jest && standard --fix",
    "build": "webpack",
    "watch": "webpack -w",
    "release": "npm run webpack && npm run release:darwin && npm run release:win32",
    "release:darwin": "electron-packager app --platform=darwin --arch=x64 --out=dist --asar=true --icon=app/images/icon.icns",
    "release:win32": "electron-packager app --platform=win32 --arch=ia32 --out=dist --asar=true --icon=app/images/icon.ico"
  },
  "engines": {
    "node": ">=7.0.0",
    "npm": ">=4.0.0"
  },
  "dependencies": {
    "flux": "^3.1.2",
    "immutable": "^3.8.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "styled-components": "^1.4.6"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "electron": "^1.6.8",
    "electron-packager": "^8.7.0",
    "eslint-plugin-flowtype": "^2.33.0",
    "husky": "^0.13.3",
    "jest": "^20.0.3",
    "lint-staged": "^3.4.2",
    "react-test-renderer": "^15.5.4",
    "standard": "^10.0.2",
    "webpack": "^2.6.0"
  },
  "standard": {
    "plugins": [
      "flowtype"
    ],
    "parser": "babel-eslint"
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "git add"
    ]
  }
}
