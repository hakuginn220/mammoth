{
  "private": true,
  "name": "mammoth-develop",
  "version": "0.1.0",
  "description": "test client for mastodon",
  "engines": {
    "node": ">=6.0.0",
    "npm": ">=4.0.0"
  },
  "scripts": {
    "start": "electron app",
    "test": "standard --fix",
    "build": "webpack",
    "watch": "webpack -w",
    "release": "npm run webpack && npm run release:darwin && npm run release:win32",
    "release:darwin": "electron-packager app --platform=darwin --arch=x64 --out=dist --asar=true --icon=app/images/icon.icns",
    "release:win32": "electron-packager app --platform=win32 --arch=ia32 --out=dist --asar=true --icon=app/images/icon.ico"
  },
  "dependencies": {
    "flux": "^3.1.2",
    "immutable": "^3.8.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "styled-components": "^2.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "electron": "^1.6.11",
    "electron-packager": "^8.7.1",
    "standard": "^10.0.2",
    "webpack": "^3.0.0"
  }
}
