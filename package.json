{
  "private": true,
  "name": "mammoth",
  "version": "0.0.1",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "test": "standard --fix",
    "watch": "webpack -w",
    "build": "webpack",
    "release": "npm run build && npm run release:osx && npm run release:win",
    "release:osx": "electron-packager . --platform=darwin --arch=x64 --icon=images/icon.icns --ignore=src --out=build --overwrite",
    "release:win": "electron-packager . --platform=win32 --arch=ia32 --icon=images/icon.ico --ignore=src --out=build --overwrite"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "electron": "^1.6.11",
    "electron-packager": "^8.7.2",
    "fs-extra": "^4.0.0",
    "mobx": "^3.2.2",
    "mobx-react": "^4.2.2",
    "oauth": "^0.9.15",
    "preact": "^8.2.1",
    "preact-compat": "^3.16.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-router-dom": "^4.1.2",
    "standard": "^10.0.2",
    "styled-components": "^2.1.1",
    "webpack": "^3.4.1"
  }
}
