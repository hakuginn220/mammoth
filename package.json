{
  "name": "mammoth",
  "version": "0.1.0",
  "description": "test client for mastodon",
  "main": "app/main.min.js",
  "scripts": {
    "start": "webpack && electron app",
    "test": "webpack && standard --fix",
    "release": "webpack && npm run release:darwin && npm run release:win32",
    "release:darwin": "electron-packager app --platform=darwin --arch=x64 --out=release --asar=true --icon=app/images/icon.icns",
    "release:win32": "electron-packager app --platform=win32 --arch=ia32 --out=release --asar=true --icon=app/images/icon.ico"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hakuginn220/mammoth.git"
  },
  "author": "hakuginn220",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hakuginn220/mammoth/issues"
  },
  "homepage": "https://github.com/hakuginn220/mammoth#readme",
  "engines": {
    "node": ">=6.0.0",
    "npm": ">=4.0.0"
  },
  "dependencies": {
    "flux": "^3.1.2",
    "immutable": "^3.8.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.0",
    "electron": "^1.6.5",
    "electron-packager": "^8.6.0",
    "standard": "^10.0.2",
    "style-loader": "^0.16.1",
    "webpack": "^2.4.1"
  }
